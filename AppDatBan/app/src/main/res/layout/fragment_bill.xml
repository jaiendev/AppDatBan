<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Datmon.fragment_Datmon.Bill.Bill">

    <LinearLayout
        android:weightSum="12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#DC2020"
                android:textSize="20sp"
                android:text="Nhóm 12"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/imgHomeCustomerBill"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/txtTenUserBill"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#B553677A"
                android:textStyle="bold"
                android:text=""
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="30dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="Thanh toán"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:textColor="#373737"
            android:text="Bàn đã chọn"
            android:textSize="15sp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.4"
            android:padding="5dp"
            android:background="@drawable/custom_listview"
            android:outlineSpotShadowColor="@color/cardview_shadow_end_color"
            android:outlineAmbientShadowColor="@color/cardview_shadow_end_color"
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imghinhBill"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/txtsobanBill"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imghinhBill"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Số bàn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/txtmotaBill"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imghinhBill"
                android:layout_below="@id/txtsobanBill"
                android:text="2 Người lớn, 0 Trẻ em"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/txtgiatienbill"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imghinhBill"
                android:layout_below="@id/txtmotaBill"
                android:textColor="@color/black"
                android:text="Giá chung: 500.000vnd/3 giờ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="8sp"
                android:id="@+id/txtloaibill"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@id/txtsobanBill"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Cặp đôi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="#686868"
                android:text="Tổng tiền bàn:"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/txtTongtienban"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:text="500.000 VNĐ"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="#686868"
                android:text="Lưu ý: "
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:text="Có thể phát sinh nếu quá giờ"
                android:layout_weight="2.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Món và thức uống đã chọn"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <ListView
            android:id="@+id/lstbill"
            android:background="@drawable/custome_khunglistviewbill"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:textColor="#686868"
                android:text="Tổng tiền món:"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1.0"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/txtTongtienmon"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:text="1.000.000 VNĐ"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="Tổng tiền :"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTongtien"
                android:textSize="16sp"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_red_light"
                android:text="1.000.000 VNĐ"
                android:layout_weight="2.6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>